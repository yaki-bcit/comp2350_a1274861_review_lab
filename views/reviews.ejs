<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8"/>
		<link rel="stylesheet" href="bulma.min.css">
		<script defer src="https://use.fontawesome.com/releases/v5.3.1/js/all.js"> </script>
	</head>
	<body>
		<section class="section">
			<div class="maincolumns columns is-desktop is-vcentered">
				<div class="column is-10 is-offset-1 notification is-info is-light box container">
					<div class="title">
						Reviews for <%= restaurantName %> 
					</div>
					<% if (locals.allReviews) { %>
						<div class="table-container">
						<table class="table is-bordered is-hoverable is-striped is-narrow">
							<thead>
							<tr>
								<th> Review </th>
								<th> By </th>
								<th> Rating </th>
								<th> &nbsp; </th>
							</tr>
							</thead>
							<% let i=0; %>
							<% for(i=0; i < allReviews.length; i++) { %>
							<tr>
								<td><%= allReviews[i].details %></td>
								<td><%= allReviews[i].reviewer_name %></td>
								<td><%= allReviews[i].rating %>/5</td>
								<td><a href="/deleteReview?id=<%= allReviews[i].review_id %>">
									<span class="icon is-small">
										<i class="fas fa-trash"></i>
									</span></a>
								</td>
							</tr>
							<% } %>
							<tfoot>
								<tr> <td colspan="4">
								There are <%= i %> reviews.
								</td> </tr>
							</tfoot>
						</table>
						</div>
					<% } %>
				 
					<div>
						<form action="addReview?id=<%= restaurantId %>&restaurant=<%= restaurantName %>" method="post">
							<div class="field is-horizontal">
								<div class="field-label is-normal">
									<label class="label">Add New Review</label>
								</div>
								<div class="field-body">
									<div class="field">
										<p class="control is-expanded">
											<input name="reviewer_name" class="input" type="text"
												placeholder="Your name">
										</p>
									</div>
									<div class="field">
										<p class="control is-expanded">
											<input name="details" class="input" type="text"
												placeholder="Review">
										</p>
									</div>
									<div class="field">
										<p class="control is-expanded">
											<input name="rating" class="input" type="text"
												placeholder="Rating (0 to 5)">
										</p>
									</div>
									<div class="field">
										<button class="button is-link">
											<span>Add</span>
											<span class="icon is-small">
												<i class="fas fa-star"></i>
											</span>
										</button>
									</div>
								</div>
							</div>
						</form>
					</div>
				</div>
			</div>
		</section>
	</body>
</html>
